@model FullstackPhoneBook.EndPoints.MVC.Models.AddNewPersonDisplayViewModel
@{
    ViewData["Title"] = "Add Person View";
}

@section head
    {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.8/css/select2.min.css" rel="stylesheet" />
}


<form asp-action="Add" asp-controller="People" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="FirstName">FirstName</label>
        <input type="text" class="form-control" asp-for="FirstName" placeholder="FirstName" maxlength="50">
        <span asp-validation-for="FirstName"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName">LastName</label>
        <input type="text" class="form-control" asp-for="LastName" placeholder="LastName" maxlength="50">
        <span asp-validation-for="LastName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email">Email Address</label>
        <input type="text" class="form-control" asp-for="Email" placeholder="Email@email.com" maxlength="256">
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input type="text" class="form-control" asp-for="Address" placeholder="apple street" maxlength="500">
        <span asp-validation-for="Address"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber">PhoneNumber</label>
        <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="09144460231" maxlength="21">
        <span asp-validation-for="PhoneNumber"></span>
    </div>

    <div class="form-group">
        <label asp-for="Image">Your image</label>
        <input type="file" class="form-control" asp-for="Image">
        <span asp-validation-for="Image"></span>
    </div>

    <div class="form-group">
        <select class="form-control select2" name="SelectedTag" multiple>
            @foreach (var item in Model.TagsForDisplay)
            {
                <option value="@item.id">@item.Title</option>
            }
        </select>
    </div>



    <input type="submit" class="btn btn-primary" value="Save" />
</form>

@section scripts
    {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.8/js/select2.min.js"></script>

    <script>$(document).ready(function () {
            $('.select2').select2();
        });</script>
}