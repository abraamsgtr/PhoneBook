@model FullstackPhoneBook.EndPoints.MVC.Models.AddNewPersonDisplayViewModel
@{

}

@section head
    {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.8/css/select2.min.css" rel="stylesheet" />
}


<form asp-action="Add" asp-controller="People" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="FirstName">FirstName</label>
        <input type="text" class="form-control" asp-for="FirstName" placeholder="FirstName">
    </div>
    <div class="form-group">
        <label asp-for="LastName">LastName</label>
        <input type="text" class="form-control" asp-for="LastName" placeholder="LastName">
    </div>
    <div class="form-group">
        <label asp-for="Email">Email Address</label>
        <input type="text" class="form-control" asp-for="Email" placeholder="Email@email.com">
    </div>
    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input type="text" class="form-control" asp-for="Address" placeholder="apple street">
    </div>

    <div class="form-group">
        <label asp-for="Image">Your image</label>
        <input type="file" class="form-control" asp-for="Image">
    </div>

    <div class="form-group">
        <select class="form-control select2" name="SelectedTag" multiple>
            @foreach (var item in Model.TagsForDisplay)
            {
                <option value="@item.id">@item.Title</option>
            }
        </select>
    </div>



    <input type="submit" class="btn btn-primary" value="Save" />
</form>

@section scripts
    {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.8/js/select2.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.select2').select2();
        });
    </script>
}