@model FullstackPhoneBook.EndPoints.MVC.Models.AddNewTagDisplayViewModel
@{
    ViewData["Title"] = "Add Tag View";
}

@section head
    {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.8/css/select2.min.css" rel="stylesheet" />
}


<form asp-action="Add" asp-controller="Tag" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input type="text" class="form-control" asp-for="Title" placeholder="Title" maxlength="50">
        <span asp-validation-for="Title"></span>
    </div>



    <input type="submit" class="btn btn-primary" value="Save" />
</form>

@section scripts
    {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.8/js/select2.min.js"></script>

    <script>$(document).ready(function () {
            $('.select2').select2();
        });</script>
}